# Environment Configuration for Nexa Backend

# Application
NODE_ENV=production
PORT=5002

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Configuration
JWT_SECRET=your-super-secure-32-char-production-secret-12345678
JWT_EXPIRES_IN=7d

# CSRF Protection
CSRF_SECRET=your-unique-csrf-secret-production-key-987654321

# Client Configuration
CLIENT_URL=https://your-frontend-domain.vercel.app
BLOG_URL=https://your-blog-domain.com

# Admin Setup
ADMIN_SETUP_KEY=your-admin-setup-key

# OAuth (Optional - set to dummy if not used)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-domain.render.com/api/auth/google/callback

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://your-backend-domain.render.com/api/auth/linkedin/callback
